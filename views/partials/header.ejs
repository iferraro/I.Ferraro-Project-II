<nav id="navBar">
    <a href='/'>
        <img src="https://i.imgur.com/M98KjA9.png" alt="logo" class="logo">
    </a>
    <% if (user) { %>
        <p>
            Welcome, <%= user.name %>
        </p>
        <form action="/contributors">
            <button type="submit" class="submit">Contributors</button>
        </form>
        <form action="/contributors/<%= user._id %>">
            <button type="submit" class="submit">My Work</button>
        </form>
        <form action="/logout">
            <button type="submit" class="submit">Log Out</button>
        </form>
    <% } else { %>
        <form action="/contributors">
            <button type="submit" class="submit">Contributors</button>
        </form>
        <form action="/auth/google">
            <button type="submit" class="submit">Login</button>
        </form>
    <% } %>
</nav>
<h1>
    <%= heading %>
</h1>